{
  "manifest_version": 3,
  "name": "Tab Title Picker",
  "version": "1.0",
  "description": "A Chrome extension that shows the current tab's title.",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
